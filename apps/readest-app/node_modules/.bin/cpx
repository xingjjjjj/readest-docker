#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/app/readest/node_modules/.pnpm/cpx2@8.0.0/node_modules/cpx2/bin/node_modules:/app/readest/node_modules/.pnpm/cpx2@8.0.0/node_modules/cpx2/node_modules:/app/readest/node_modules/.pnpm/cpx2@8.0.0/node_modules:/app/readest/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/app/readest/node_modules/.pnpm/cpx2@8.0.0/node_modules/cpx2/bin/node_modules:/app/readest/node_modules/.pnpm/cpx2@8.0.0/node_modules/cpx2/node_modules:/app/readest/node_modules/.pnpm/cpx2@8.0.0/node_modules:/app/readest/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../cpx2/bin/index.js" "$@"
else
  exec node  "$basedir/../cpx2/bin/index.js" "$@"
fi
