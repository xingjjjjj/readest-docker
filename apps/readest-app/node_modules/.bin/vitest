#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/app/readest/node_modules/.pnpm/vitest@4.0.15_@types+node@22.15.31_jiti@1.21.7_jsdom@26.1.0_terser@5.44.0_yaml@2.8.1/node_modules/vitest/node_modules:/app/readest/node_modules/.pnpm/vitest@4.0.15_@types+node@22.15.31_jiti@1.21.7_jsdom@26.1.0_terser@5.44.0_yaml@2.8.1/node_modules:/app/readest/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/app/readest/node_modules/.pnpm/vitest@4.0.15_@types+node@22.15.31_jiti@1.21.7_jsdom@26.1.0_terser@5.44.0_yaml@2.8.1/node_modules/vitest/node_modules:/app/readest/node_modules/.pnpm/vitest@4.0.15_@types+node@22.15.31_jiti@1.21.7_jsdom@26.1.0_terser@5.44.0_yaml@2.8.1/node_modules:/app/readest/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../vitest/vitest.mjs" "$@"
else
  exec node  "$basedir/../vitest/vitest.mjs" "$@"
fi
